# Foody Buddy Application Environment Variables
# Copy this file to .env and update the values for production

# Single PostgreSQL Database Configuration
POSTGRES_PASSWORD=your_secure_database_password_here

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://localhost:8080

# Spring Profiles
SPRING_PROFILES_ACTIVE=prod

# Database Configuration (Development - these are defaults)
# Single Database with Schemas
DB_URL=jdbc:postgresql://localhost:5432/foodybuddy
DB_USERNAME=foodybuddy_user
DB_PASSWORD=foodybuddy_password

# Schema-specific URLs (for reference)
# Gateway Schema: jdbc:postgresql://localhost:5432/foodybuddy?currentSchema=gateway
# Orders Schema:  jdbc:postgresql://localhost:5432/foodybuddy?currentSchema=orders
# Payments Schema: jdbc:postgresql://localhost:5432/foodybuddy?currentSchema=payments
