{
  "info": {
    "name": "FoodyBuddy Payments Service",
    "description": "Payment processing service for FoodyBuddy",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8082/api/payments/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8082",
          "path": ["api", "payments", "health"]
        }
      }
    },
    {
      "name": "Process Payment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderId\": \"ORDER-123\",\n  \"amount\": 25.99,\n  \"method\": \"CREDIT_CARD\",\n  \"cardNumber\": \"4111111111111111\",\n  \"cardHolderName\": \"John Doe\",\n  \"expiryDate\": \"12/25\",\n  \"cvv\": \"123\"\n}"
        },
        "url": {
          "raw": "http://localhost:8082/api/payments/process",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8082",
          "path": ["api", "payments", "process"]
        }
      }
    },
    {
      "name": "Get Payment by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8082/api/payments/{{paymentId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8082",
          "path": ["api", "payments", "{{paymentId}}"]
        }
      }
    },
    {
      "name": "Get Payment by Order ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8082/api/payments/order/{{orderId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8082",
          "path": ["api", "payments", "order", "{{orderId}}"]
        }
      }
    },
    {
      "name": "Get All Payments",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8082/api/payments",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8082",
          "path": ["api", "payments"]
        }
      }
    },
    {
      "name": "Process Refund",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 25.99,\n  \"reason\": \"Customer requested refund\"\n}"
        },
        "url": {
          "raw": "http://localhost:8082/api/payments/{{paymentId}}/refund",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8082",
          "path": ["api", "payments", "{{paymentId}}", "refund"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "paymentId",
      "value": "PAYMENT-123",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "ORDER-123",
      "type": "string"
    }
  ]
}
